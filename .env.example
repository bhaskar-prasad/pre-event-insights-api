# Environment
ENV=development

# Authentication
JWT_SECRET=your-secret-key-change-in-production

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password
DB_NAME=fastapi_db

# Vault Configuration
VAULT_ENABLED=false
